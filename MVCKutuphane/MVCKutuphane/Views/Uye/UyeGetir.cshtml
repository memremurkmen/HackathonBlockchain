@model DataAccessLayer.Model.Entity.tblUyeler

@{
    ViewBag.Title = "UyeGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<title>Üye Güncelle</title>
<h2>UyeGetir</h2>

@using (Html.BeginForm("UyeGuncelle", "Uye", FormMethod.Post)) //öncesi actionadı ,controller adı
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">

        @Html.LabelFor(k => k.ID)
        @Html.TextBoxFor(k => k.ID, new { @class = "form-control", @readonly = "readonly" })
        <br />

        <label>Üye Adı</label>
        @Html.TextBoxFor(k => k.AD, new { @class = "form-control" })
        <br />

        <label>Üye Soyadı</label>
        @Html.TextBoxFor(k => k.SOYAD, new { @class = "form-control" })
        <br />

        <label>Mail</label>
        @Html.TextBoxFor(k => k.MAIL, new { @class = "form-control" })
        <br />

        <label>Kullanıcı Adı</label>
        @Html.TextBoxFor(k => k.KULLANICIADI, new { @class = "form-control" })
        <br />

        <label>Şifre</label>
        @Html.TextBoxFor(k => k.SIFRE, new { @class = "form-control" })
        <br />

        <label>Telefon</label>
        @Html.TextBoxFor(k => k.TELEFON, new { @class = "form-control" })
        <br />

        <label>Okul</label>
        @Html.TextBoxFor(k => k.OKUL, new { @class = "form-control" })
        <br />
        <label>TC</label>
        @Html.TextBoxFor(k => k.TC, new { @class = "form-control" })
        <br />
        <label>Doğum Yılı</label>
        @Html.TextBoxFor(k => k.DOGUMYILI, new { @class = "form-control" })
        <br />
    </div>

    <div>
        <button class="btn btn-warning">Güncelle</button>
    </div>
}
